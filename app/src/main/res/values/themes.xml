<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FocusLeaf" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Outline color -->
        <item name="colorOutline">@color/outline</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/surface</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Theme.FocusLeaf" parent="Base.Theme.FocusLeaf" />
    
    <!-- Light theme for Onboarding and Auth -->
    <style name="Theme.FocusLeaf.Onboarding" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/onboarding_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/onboarding_card</item>
        <item name="colorOnSurface">@color/onboarding_text_primary</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@drawable/gradient_pink_background</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/pink_gradient_start</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
</resources>