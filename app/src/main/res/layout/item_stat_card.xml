<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="80dp"
    android:layout_margin="4dp"
    android:layout_weight="1"
    app:cardBackgroundColor="@color/stat_card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Иконка -->
        <ImageView
            android:id="@+id/ivStatIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="@string/task_count"
            android:tint="@color/white"
            tools:ignore="ContentDescription"
            tools:src="@android:drawable/ic_menu_agenda" />

        <!-- Текст метки -->
        <TextView
            android:id="@+id/tvStatLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_count_label"
            android:textColor="@color/stat_card_text_secondary"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="Количество задач" />

        <!-- Значение -->
        <TextView
            android:id="@+id/tvStatValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2"
            android:textColor="@color/stat_card_text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="2" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

