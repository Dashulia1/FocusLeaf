<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:padding="24dp">

    <!-- Placeholder для графика аналитики за сегодня -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:tint="@color/main_timer_color"
            android:alpha="0.3"
            android:contentDescription="Analytics chart"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Аналитика за сегодня"
            android:textColor="@color/main_text_secondary"
            android:textSize="16sp"
            tools:text="Аналитика за сегодня" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="График будет здесь"
            android:textColor="@color/main_text_secondary"
            android:textSize="14sp"
            tools:text="График будет здесь" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

