<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_pink_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:titleTextColor="@color/project_card_text_primary">

            <!-- Кастомный статус бар с временем -->
            <LinearLayout
                android:id="@+id/llStatusBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="16dp">

                <!-- Кнопка назад -->
                <ImageButton
                    android:id="@+id/ibBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/back"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:tint="@color/project_card_text_primary"
                    tools:ignore="ContentDescription" />

                <!-- Время -->
                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/time_9_41"
                    android:textColor="@color/project_card_text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Кнопка домой -->
                <ImageButton
                    android:id="@+id/ibHome"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/app_name"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:tint="@color/project_card_text_primary"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Белая карточка с контентом -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                app:cardBackgroundColor="@color/project_card_background"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Заголовок "Сегодня" -->
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="32dp"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="@string/today"
                        android:textColor="@color/project_card_text_primary"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- Основная статистика -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="32dp">

                        <!-- Крупная цифра сессий -->
                        <TextView
                            android:id="@+id/tvSessionsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="24dp"
                            android:text="4"
                            android:textColor="@color/project_fab_color"
                            android:textSize="48sp"
                            android:textStyle="bold" />

                        <!-- Детали статистики -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTotalSessions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="@string/total_sessions"
                                android:textColor="@color/project_card_text_secondary"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvFocusTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="Фокус-время: 100m"
                                android:textColor="@color/project_card_text_secondary"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvConcentration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Средняя концентрация: 90%"
                                android:textColor="@color/project_card_text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Диаграмма -->
                    <LinearLayout
                        android:id="@+id/llChartContainer"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:background="@drawable/chart_background"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:paddingStart="40dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">

                        <!-- Столбцы диаграммы будут добавляться программно -->
                        <LinearLayout
                            android:id="@+id/llChartColumns"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:orientation="horizontal" />

                        <!-- Шкала слева -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100%"
                                android:textColor="@color/project_card_text_secondary"
                                android:textSize="10sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="#E0E0E0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="80%"
                                android:textColor="@color/project_card_text_secondary"
                                android:textSize="10sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="#E0E0E0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="60%"
                                android:textColor="@color/project_card_text_secondary"
                                android:textSize="10sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="#E0E0E0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="40%"
                                android:textColor="@color/project_card_text_secondary"
                                android:textSize="10sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="#E0E0E0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20%"
                                android:textColor="@color/project_card_text_secondary"
                                android:textSize="10sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="#E0E0E0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/project_card_text_secondary"
                                android:textSize="10sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Временные метки -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="40dp"
                        android:paddingEnd="16dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="4"
                            android:textColor="@color/project_card_text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="7"
                            android:textColor="@color/project_card_text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="10"
                            android:textColor="@color/project_card_text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="13"
                            android:textColor="@color/project_card_text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="15"
                            android:textColor="@color/project_card_text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="17"
                            android:textColor="@color/project_card_text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="20"
                            android:textColor="@color/project_card_text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="22"
                            android:textColor="@color/project_card_text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="00"
                            android:textColor="@color/project_card_text_secondary"
                            android:textSize="10sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

