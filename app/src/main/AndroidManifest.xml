<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <application
        android:name=".FocusLeafApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FocusLeaf"
        tools:targetApi="31">

        <!-- Главная активность - OnboardingActivity (LAUNCHER) -->
        <!-- ВРЕМЕННО: закомментировано для тестирования ProjectsActivity -->
        <activity
            android:name=".OnboardingActivity"
            android:exported="true"
            android:configChanges="locale|layoutDirection|keyboard|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FocusLeaf.Onboarding">
            <!-- <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter> -->
        </activity>

        <!-- Активность входа (LoginActivity) -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection|keyboard|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FocusLeaf.Onboarding" />

        <!-- Главная активность приложения - MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection|keyboard|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FocusLeaf.Onboarding" />

        <!-- Активность управления проектами - ProjectsActivity -->
        <!-- ВРЕМЕННО: сделана LAUNCHER для быстрого тестирования -->
        <activity
            android:name=".ProjectsActivity"
            android:exported="true"
            android:configChanges="locale|layoutDirection|keyboard|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FocusLeaf.Onboarding">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Активность статистики - StatisticsActivity -->
        <activity
            android:name=".StatisticsActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection|keyboard|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FocusLeaf.Onboarding" />

        <!-- Активность поиска проектов - ProjectsSearchActivity -->
        <activity
            android:name=".ProjectsSearchActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection|keyboard|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FocusLeaf.Onboarding" />

        <!-- Активность создания проекта - CreateProjectActivity -->
        <activity
            android:name=".CreateProjectActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection|keyboard|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FocusLeaf.Onboarding" />

        <!-- Активность аналитики за сегодня - TodayAnalyticsActivity -->
        <activity
            android:name=".TodayAnalyticsActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection|keyboard|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FocusLeaf.Onboarding" />

        <!-- Активность аналитики за неделю - WeekAnalyticsActivity -->
        <activity
            android:name=".WeekAnalyticsActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection|keyboard|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FocusLeaf.Onboarding" />

        <!-- Активность аналитики проектов - ProjectAnalyticsActivity -->
        <activity
            android:name=".ProjectAnalyticsActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection|keyboard|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FocusLeaf.Onboarding" />

        <!-- Активность поиска друзей - FriendsSearchActivity -->
        <activity
            android:name=".FriendsSearchActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection|keyboard|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FocusLeaf" />

        <!-- Активность совместной сессии - GroupSessionActivity -->
        <activity
            android:name=".GroupSessionActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection|keyboard|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FocusLeaf" />

        <!-- Активность чата поддержки - ChatActivity -->
        <activity
            android:name=".ChatActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection|keyboard|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FocusLeaf" />

        <!-- Активность личного кабинета - ProfileActivity -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection|keyboard|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FocusLeaf" />

        <!-- Активность настроек таймера - TimerSettingsActivity -->
        <activity
            android:name=".TimerSettingsActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection|keyboard|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FocusLeaf" />

        <!-- Активность настроек уведомлений - NotificationSettingsActivity -->
        <activity
            android:name=".NotificationSettingsActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection|keyboard|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FocusLeaf" />

        <!-- Активность настроек темы - ThemeSettingsActivity -->
        <activity
            android:name=".ThemeSettingsActivity"
            android:exported="false"
            android:configChanges="locale|layoutDirection|keyboard|keyboardHidden|uiMode"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.FocusLeaf" />

        <!-- Firebase Services -->
        <service
            android:name=".service.FirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>